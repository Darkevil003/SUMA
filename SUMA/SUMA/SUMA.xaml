             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SUMA.SUMA">
    <ContentPage.Content>
        <StackLayout>
            <Entry Keyboard="Numeric"
                   Placeholder="Ingrese numero 1"
                   x:Name="numero1"
                   />
